  <div class="container">
    <main>
      <div class="py-5 text-center"></div>
      <h4 class="d-flex justify-content-between align-items-center mb-3">
        <span class="text-color ">ทำบัญชีรายรับรายจ่าย</span>
      </h4>

      <ul class="pagination">
        <li class=" me-2">
          <form method="GET" action="/summary">
            <select class="page-link" name="limit" id="limit" onchange="this.form.submit()">
              <option value="10" <%= limit === 10 ? 'selected' : '' %>>10</option>
              <option value="20" <%= limit === 20 ? 'selected' : '' %>>20</option>
              <option value="30" <%= limit === 30 ? 'selected' : '' %>>30</option>
              <option value="40" <%= limit === 40 ? 'selected' : '' %>>40</option>
            </select>
          </form>
        </li>

        <li class="page-item">
            <a class="page-link" href="?page=<%= currentPage - 1 %>">
              <span aria-hidden="true">&laquo;</span>
            </a>
        </li>

        <% for (let i=1; i <=totalPages; i++) { %>
          <li class="page-item">

            <a href="?page=<%= i %>" class="page-link" <%=currentPage===i ? 'active' : '' %>"><%= i %></a>
          </li>
          <% } %>

            <li class="page-item">
                <a class="page-link" href="?page=<%= currentPage + 1 %>" aria-label="Next">
                  <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
      </ul>
      
      <div class="row g-5">
        <div class="col-md-5 col-lg-4 order-md-last card">
          <h4 class="mb-3 mt-3 text-color">เพิ่มรายการ</h4>
          <form action="/add-transaction" method="POST" enctype="multipart/form-data">
            <div class="form-group mb-3">
              <label for="account" class="text-color">บัญชี</label>
              <select name="account_id" id="account" class="form-control" required>
                <% accounts.forEach(account=> { %>
                  <option value="<%= account.id %>">
                    <%= account.account_name %>
                  </option>
                  <% }) %>
              </select>
            </div>

            <div class="form-group mb-3">
              <label for="transaction_date" class="text-color">วันที่</label>
              <input type="date" name="transaction_date" id="transaction_date" class="form-control" required>
            </div>

            <div class="form-group mb-3">
              <label for="type" class="text-color">ประเภท</label>
              <select name="type_id" id="type" class="form-control" required>
                <option value="" disabled selected >เลือกประเภท</option>
                <% types.forEach(type=> { %>
                  <option value="<%= type.id %>">
                    <%= type.type_name %>
                  </option>
                  <% }) %>
              </select>
            </div>

            <div class="row align-items-center mb-3">
              <div class="col-3">
                <select name="is_income" id="is_income" class="form-control" required>
                  <option value="true">รายรับ</option>
                  <option value="false">รายจ่าย</option>
                </select>
              </div>
              <div class="col-9">
                <input type="number" name="amount" id="amount" class="form-control" placeholder="ระบุจำนวนเงิน..."
                  step="0.01" required>
              </div>
            </div>

            <div class="form-group mb-3">
              <label for="note" class="text-color">หมายเหตุ</label>
              <textarea name="note" id="note" class="form-control" placeholder="ระบุหมายเหตุ..."></textarea>
            </div>

            <div class="form-group mb-4">
              <label for="slip" class="text-color">แนบสลิป</label>
              <input type="file" name="slip" id="slip" class="form-control">
            </div>

            <div class="d-grid gap-2 mb-3">
              <button type="submit" class="btn btn-primary">บันทึกข้อมูล</button>
            </div>

          </form>
        </div>
        <div class="col-md-7 col-lg-8">
          <table class="table">
            <thead>
              <tr>
                <th>ลำดับ</th>
                <th>วันที่</th>
                <th>บัญชี</th>
                <th>ประเภท</th>
                <th>รายรับ</th>
                <th>รายจ่าย</th>
                <th>หมายเหตุ</th>
                <th>สลิป</th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% transactions.forEach((transaction, index)=> { %>
                <tr>
                  <td>
                    <%= index + 1 %>
                  </td>
                  <td>
                    <% const transactionDate=new Date(transaction.transaction_date); %>
                      <%= transactionDate.toLocaleDateString('th-TH') %> 
                  </td>
                  <td>
                    <% const transactionAccount=accounts.find(account=> account.id === transaction.account_id);%>
                      <%= transactionAccount ? transactionAccount.account_name : '' %>
                  </td>
                  <td>
                    <% const transactionType=types.find(type=> type.id === transaction.type_id);%>
                      <%= transactionType ? transactionType.type_name : '' %>
                  </td>
                  <td>
                    <% if (transaction.is_income) {%>
                      <%= transaction.amount %>
                        <% } else {%>
                          0
                          <%} %>
                  </td>
                  <td>
                    <% if (!transaction.is_income) {%>
                      <%= transaction.amount %>
                        <% } else {%>
                          0
                          <%} %>
                  </td>
                  <td>
                    <%= transaction.note ? transaction.note : 'ไม่ได้ระบุ' %>
                  </td>
                  <td>
                    <% if (transaction.slip) { %>
                      <a href="/uploads/<%= transaction.slip %>" target="_blank" class="btn btn-secondary btn-sm">ดูสลิป</a>
                      <% } else { %>
                        ไม่มี
                        <% } %>
                  </td>
                  <td>
                  <td>
                    <form action="/delete-transaction/<%= account.id %>/<%= transaction.id %>" method="POST"
                      style="display:inline;">
                      <button type="submit" class="btn btn-outline-secondary btn-sm  align-items-center justify-center"
                        onclick="return confirm('คุณแน่ใจหรือว่าต้องการลบข้อมูลนี้?');">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                          class="bi bi-x-lg" viewBox="0 0 16 16">
                          <path
                            d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8z" />
                        </svg></button>
                    </form>
                  </td>
                  </td>
                </tr>
                <% }) %>

            </tbody>
            <thead>
              <tr>
                <th>ยอดรวม</th>
                <th></th>
                <th></th>
                <th></th>
                <th><%= totalIncome.toLocaleString('th-TH', { style: 'currency' , currency: 'THB' }) %></th>
                <th><%= totalExpense.toLocaleString('th-TH', { style: 'currency' , currency: 'THB' }) %></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
          </table>
        </div>
      </div>
